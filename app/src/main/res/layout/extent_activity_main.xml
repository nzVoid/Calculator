<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">
    <TextView
        android:id="@+id/Task"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/tvColor"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/tvColor"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Sin"
                style="@style/ActionButtonStyle"
                android:text="sin" />
            <TextView
                android:id="@+id/Pow"
                style="@style/ActionButtonStyle"
                android:text="x^y" />
            <TextView
                android:id="@+id/Open"
                style="@style/ActionButtonStyle"
                android:text="(" />
            <TextView
                android:id="@+id/Close"
                style="@style/ActionButtonStyle"
                android:text=")" />
            <TextView
                android:id="@+id/Divide"
                style="@style/ActionButtonStyle"
                android:text="/" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Cos"
                style="@style/ActionButtonStyle"
                android:text="cos" />
            <TextView
                android:id="@+id/Seven"
                style="@style/NumberButtonStyle"
                android:text="7" />
            <TextView
                android:id="@+id/Eight"
                style="@style/NumberButtonStyle"
                android:text="8" />
            <TextView
                android:id="@+id/Nine"
                style="@style/NumberButtonStyle"
                android:text="9" />
            <TextView
                android:id="@+id/Mult"
                style="@style/ActionButtonStyle"
                android:text="*" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Tan"
                style="@style/ActionButtonStyle"
                android:text="tan" />
            <TextView
                android:id="@+id/Four"
                style="@style/NumberButtonStyle"
                android:text="4" />
            <TextView
                android:id="@+id/Five"
                style="@style/NumberButtonStyle"
                android:text="5" />
            <TextView
                android:id="@+id/Six"
                style="@style/NumberButtonStyle"
                android:text="6" />
            <TextView
                android:id="@+id/Minus"
                style="@style/ActionButtonStyle"
                android:text="-" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Sqrt"
                style="@style/ActionButtonStyle"
                android:text="âˆš" />
            <TextView
                android:id="@+id/One"
                style="@style/NumberButtonStyle"
                android:text="1" />
            <TextView
                android:id="@+id/Two"
                style="@style/NumberButtonStyle"
                android:text="2" />
            <TextView
                android:id="@+id/Three"
                style="@style/NumberButtonStyle"
                android:text="3" />
            <TextView
                android:id="@+id/Plus"
                style="@style/ActionButtonStyle"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Log"
                style="@style/ActionButtonStyle"
                android:text="log" />
            <TextView
                android:id="@+id/Dot"
                style="@style/NumberButtonStyle"
                android:text="." />
            <TextView
                android:id="@+id/Zero"
                style="@style/NumberButtonStyle"
                android:text="0" />
            <TextView
                android:id="@+id/Back"
                style="@style/NumberButtonStyle"
                android:text="Back" />
            <TextView
                android:id="@+id/Equals"
                style="@style/ActionButtonStyle"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
